<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QualOMat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.QualOMat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.QualOMat.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorButtonNormal">@color/black</item>
        <item name="itemFillColor">@color/black</item>
        <item name="colorSecondary">@color/black</item>
    </style>

    <style name="Theme.QualOMat.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorButtonNormal">@color/black</item>
        <item name="itemFillColor">@color/black</item>
        <item name="colorSecondary">@color/black</item>
    </style>
</resources>